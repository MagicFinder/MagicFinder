<h5 class="idxTitle">Market corner</h5>
<p class="idxTitleP">Here you can find all the card on the market</p>

<div class="container ">
{{#each users}}
{{#if cardonsale.length}}
<div class="card-flex">
<div class="container text-center">
      <b>Collection Owner:</b> 
      <h4>{{this.username}}</h4>
      
      <a href="{{this.email}}" target="_blank" class="btn btn-primary btn-sm">contact</a>
</div>
  {{#each cardonsale}}
  <div class="card-info">
    {{!-- <div class="card-user-info">

    </div> --}}

    <div class="card-image-details">
        <img class="card-img-top" src="{{cardImage}}" alt="{{cardName}} ">
        <div class="card-body">
          <h5 class="card-title">{{cardName}}</h5>
          <p class="card-text"><b>Description:</b></p>
          <p></p> {{cardDesc}}</p>
          <p class="card-text"><b>Price asked:</b> </p>
          <p> ${{cardPrice}}</p>
        </div>
    </div>



  </div>
  
  {{/each}}



</div>
{{/if}}
{{/each}}




