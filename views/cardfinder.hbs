<div class="container">
  <div class="col-md-6 col-md-offset-3">
    <div class="row">
      <div id="logo" class="text-center">
        <h1>Mtg Card finder</h1>
        <p>your manin MtG companion app!</p>
      </div>

      <div class="form-group">
        <div class="input-group">
          <input id="theInput" onkeyup="checkInput()" class="form-control" type="text" name="search"
            placeholder="Search..." required />
          <span class="input-group-btn">
            <button id="theButton" class="btn btn-success" type="submit">
              <i class="glyphicon glyphicon-search" aria-hidden="true"></i> Search
            </button>
            <p>{{ message.message }}</p>
            {{#if message }}
            <div class="error-message">{{ message }}</div>
            {{/if}}
          </span>
        </div>
      </div>
    </div>
  </div>
  <h2 id="cardName"></h2>
  <p id="cardId"></p>
  <img id="cardImage" src="">
  <h5>Card Text</h5>
  <p id="cardDesc"></p>
  <h5>Rarity</h5>
  <p id="rarity"></p>
  <h5>Price</h5>
  <p id="price"></p>

  {{#if user}}
  <button type="button" class="btn btn-dark" id="addcard">Add card</button>
  {{/if}}
</div>




<script src="https://unpkg.com/axios/dist/axios.min.js"></script>

<script type="text/javascript" src="/javascripts/APIHandler.js"></script>
{{!-- <script type="text/javascript" src="/javascripts/addcardto.js"></script> --}}
<script type="text/javascript" src="/javascripts/script.js"></script>
</body>

</html>